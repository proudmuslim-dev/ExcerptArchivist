generator client {
  provider    = "cargo prisma"
  output      = "../src/models/prisma.rs"
  module_path = "models::prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Excerpt {
    id Int @id @default(autoincrement())
    excerpt String?
    images  Image[] @relation("ExcerptImages")
}

model Image {
    path String @id 
    excerpt Excerpt @relation("ExcerptImages", fields: [excerptId], references: [id])
    excerptId Int
}
